@{
    ViewData["Title"] = "Registration";
}
<div class="container">
    <div class="row">
        <div class="col-lg-2">

        </div>
        <div class="col-lg-8">
            <div class=" row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        @* Fetching student id and stored in hidden *@
                        <input type="hidden" id="hdnstudentid" value="@ViewBag.id">
                        <label for="txtadminno" class="form-label">Admin No</label>
                        <input type="text" class="form-control text-end" id="txtadminno" placeholder="Ex : 12345">
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label for="txtname" class="form-label">Name</label>
                        <input type="text" class="form-control" id="txtname" placeholder="Ex : ABCD">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label for="txtparentname" class="form-label">Parent Name</label>
                        <input type="text" class="form-control" id="txtparentname" placeholder="Ex : ABCD">
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label for="txtcontactno" class="form-label">Contact Number</label>
                        <input type="text" class="form-control text-end" id="txtcontactno" placeholder="Ex : 1234567890">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="mb-3">
                        <label for="txtAddress" class="form-label">Address</label>
                        <textarea class="form-control" id="txtAddress" rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-end">
                    <button type="button" id="btnsave" class="btn btn-success">Success</button>
                    <button type="button" id="btnclose" class="btn btn-danger">Close</button>
                </div>
            </div>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
</div>
@section Scripts{
     <script type="text/javascript" src="/Module/student.js"></script>
     <script>Init();</script>
}